{
  "name": "nestjs-api-starter-kit",
  "version": "1.0.0",
  "description": "Production-ready NestJS API starter kit with comprehensive tooling and development workflow",
  "author": "Your Name",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "dev-setup": "chmod +x scripts/dev-setup.sh && ./scripts/dev-setup.sh",
    "test-setup": "chmod +x scripts/test-setup.sh && ./scripts/test-setup.sh",
    "docker-setup": "chmod +x scripts/docker-setup.sh && ./scripts/docker-setup.sh",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:all": "npm run test && npm run test:e2e",
    "test:all:cov": "npm run test:cov && npm run test:e2e:cov",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate src/database/migrations/Migration -d src/database/data-source.ts",
    "typeorm:migration:create": "npm run typeorm -- migration:create src/database/migrations/Migration",
    "typeorm:migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "typeorm:schema:drop": "npm run typeorm -- schema:drop -d src/database/data-source.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seeds/run-seeds.ts",
    "docker:build": "docker build -t nestjs-api-starter-kit .",
    "docker:build:dev": "docker build --target development -t nestjs-api-starter-kit:dev .",
    "docker:run": "docker run -p 3888:3888 nestjs-api-starter-kit",
    "docker:run:dev": "docker run -p 3888:3888 -v $(pwd):/usr/src/app nestjs-api-starter-kit:dev",
    "docker:up": "docker compose up",
    "docker:up:build": "docker compose up --build",
    "docker:up:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:down": "docker compose down",
    "docker:down:volumes": "docker compose down -v",
    "docker:test": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:test:down": "docker compose -f docker-compose.test.yml down -v",
    "prepare": "husky",
    "postinstall": "echo 'Skipping postinstall build in Docker'",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint:check && npm run format:check",
    "ci:test": "npm run test:all:cov",
    "ci:security": "npm audit --audit-level moderate",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^6.2.1",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "nest-winston": "^1.9.4",
    "joi": "^17.12.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.4",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@types/pg": "^8.11.2",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "standard-version": "^9.5.0",
    "source-map-support": "^0.5.21"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=8.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "npm@10.0.0",
  "keywords": [
    "nestjs",
    "typescript",
    "api",
    "starter-kit",
    "postgresql",
    "docker",
    "jest",
    "eslint",
    "prettier"
  ]
}
